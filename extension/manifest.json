{
  "manifest_version": 3,
  "name": "CertGuard AI - Extensão de Certificados",
  "version": "2.0.0",
  "description": "Extensão oficial do CertGuard AI para download de certificados e automação de tribunais",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "tabs",
    "scripting",
    "notifications",
    "webRequest"
  ],
  
  "host_permissions": [
    "https://*.tjrj.jus.br/*",
    "https://*.tjsp.jus.br/*",
    "https://*.trf2.jus.br/*",
    "https://*.pje.jus.br/*",
    "https://*.esaj.tjsp.jus.br/*",
    "https://*.projudi.tjrj.jus.br/*",
    "https://8081-ick1rotydcjwas9kzjqp5-50bdaabf.manusvm.computer/*",
    "http://localhost:*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.tjrj.jus.br/*",
        "https://*.tjsp.jus.br/*",
        "https://*.trf2.jus.br/*",
        "https://*.pje.jus.br/*",
        "https://*.esaj.tjsp.jus.br/*",
        "https://*.projudi.tjrj.jus.br/*"
      ],
      "js": ["content-script.js"],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "CertGuard AI",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "commands": {
    "auto-login": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Login automático com certificado"
    },
    "capture-screen": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "Capturar tela para auditoria"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Abrir dashboard CertGuard"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "inject-script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

