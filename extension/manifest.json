{
  "manifest_version": 3,
  "name": "CertGuard AI - Autenticação Segura",
  "version": "1.0.0",
  "description": "Extensão segura para autenticação com certificados digitais A1/A3 via backend LucIA",
  
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging",
    "background",
    "scripting"
  ],
  
  "host_permissions": [
    "https://tjrj.jus.br/*",
    "https://tjsp.jus.br/*",
    "https://trf2.jus.br/*",
    "https://pje.jus.br/*",
    "https://esaj.tjsp.jus.br/*",
    "https://projudi.tjrj.jus.br/*",
    "https://certguard.ai/*",
    "https://*.manusvm.computer/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://tjrj.jus.br/*",
        "https://tjsp.jus.br/*",
        "https://trf2.jus.br/*",
        "https://pje.jus.br/*",
        "https://esaj.tjsp.jus.br/*",
        "https://projudi.tjrj.jus.br/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "CertGuard AI",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": [
      "https://certguard.ai/*",
      "https://*.manusvm.computer/*"
    ]
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

